[color]
# makes the bar background invisible
bground = #00000000
fground = #ffffff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

realbg = #353535

[bar/mainbar]
monitor = ${env:MONITOR:Virtual-1}
width = 100%
height = 24
offset-x = 0%
offset-y = 0%

# radius controls how round the corners should be
; radius = 10
fixed-center = false

background = ${color.bground}
foreground = ${color.fground}

line-size = 2
line-color = #f00

border-size = 1

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 1

# fonts 
font-0 = hack:style=Bold:pixelsize=14
font-1 = Noto Color Emoji:scale=8

# module positions
modules-left = bspwm
modules-center = 
modules-right = filesystem cpu memory sound date
wm-restack = bspwm
override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize


# modules

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25


mount-0 = /
label-mounted = ğŸ’¾: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${color.fground}
label-mounted-underline = #4F3458

[module/bspwm]
type = internal/bspwm

label-focused-background = ${color.realbg}
label-focused = %index%
label-focused-underline= ${color.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${color.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${color.fground}
label-empty-padding = 2

; Separator in between workspaces
; label-separator = |

[module/pad]
type = custom/text
# this is unicode U+0009, it is invisible
content = ïŒ
content-padding = 1

[module/cpu]
type = custom/script
exec = ~/.config/polybar/scripts/newcpu
interval = 1
format-underline = #f90000

[module/sound]
type = custom/script
exec = ~/.config/polybar/scripts/sound_info.sh
interval = 3
format-underline = #85CA5E

[module/memory]
type = custom/script
exec = ~/.config/polybar/scripts/newmem
interval = 2
format-underline = #4bffdc

[module/date]
type = internal/date
interval = 60
date =
date-alt = "%a, %b %d "
time = "%I:%M %p"
time-alt = "%I:%M %p"
format-underline = #0a6cf5
label = "%date%%time%"

[settings]
screenchange-reload = true
compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

#vim:ft=dosini
